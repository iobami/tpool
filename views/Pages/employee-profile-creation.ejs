<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/employeeprofilecreationHead') %>
</head>

<body>
  <!-- NAV-BAR -->
  <%- include('../Templates/employeeHeaderLogin', { route:
    '/employee/dashboard' }) %>
  <!-- Navbar ends here -->

  <main>
    <div class="container my-5 shadow py-5">
      <% if (errorMessage) { %>
      <div role="alert" class="alert alert-danger fade show alert-dismissible user-message user-message--error">
        <button type="button" class="close" data-dismiss="alert">
          &times;
        </button>
        <%= errorMessage %>
      </div>
      <% } if (success && success.length > 0) { %>
      <div role="alert" class="alert alert-success fade show alert-dismissible user-message">
        <button type="button" class="close" data-dismiss="alert">
          &times;
        </button>
        <%= success %>
      </div>
      <% } %>
      <p class="start-text text-center">
        Letâ€™s get started with a few details about you
      </p>

      <!-- progress bar starts -->

      <div class="container py-5 center">
        <div class="row">
          <div class="col-12">
            <div class="form-progress">
              <div class="center">
                <progress class="form-progress-bar" min="0" max="33" value="0" step="33"
                  aria-labelledby="form-progress-completion"></progress>
                <div class="form-progress-indicator one active">
                  <i class="text-default mb-2 fa-2x fa fa-check-circle" aria-hidden="true"></i>
                </div>
                <div class="form-progress-indicator two">
                  <i class="text-default mb-2 fa-2x fa fa-circle-thin" aria-hidden="true"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- progress bar ends -->

      <form id="employeeProfileCreation" action="/employee/profile/create" method="POST" enctype="multipart/form-data"
        class="">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <h4 class="form-title mb-4">Personal Information</h4>
        <div class="form-row">
          <!-- <div class="form-group col-12 col-md-6 d-flex justify-content-center">
                        Profile picture
                        <img src="" alt="" class="profile-picture img-fluid" style="width: 200px; height: 200px;">
                    </div> -->
          <div class="form-group col-12 col-md-6 d-flex flex-column justify-content-md-center">
            <label for="file" class="d-block btn btn-primary">Upload profile Picture</label>
            <input type="file" id="file" class="profile-picture-file form-control inputfile" name="image" required />
            <!-- <button type="file" class="btn btn-primary"></button> -->
            <small>300 x 360px recommended. JPGs and PNG suppported</small>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>User Type</label>
            <select class="userTypee form-control" name="userType" required>
              <option value="">Select User Type</option>
              <option value="non-hng">NON HNG</option>
              <option value="hng">HNG</option>
            </select>
          </div>
          <div id="HNGID" class="form-group col-md-6">
            <label class="hngIdLabel">HNG ID</label>
            <input type="text" class="HNGID form-control" disabled placeholder="" name="hngId" required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Firstname</label>
            <input type="text" class="form-control" placeholder="John" name="firstName" required />
          </div>
          <div class="form-group col-md-6">
            <label>lastname</label>
            <input type="text" class="form-control" placeholder="Doe" name="lastName" required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Username</label>
            <input type="text" class="form-control" placeholder="e.g Tobiie" name="userName" required />
          </div>
          <div class="form-group col-md-6">
            <label>Email</label>
            <input type="email" class="form-control" placeholder="example@example.com" name="email" required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Date of Birth</label>
            <input type="date" class="form-control" placeholder="" name="dateOfBirth" required />
          </div>
          <div class="form-group col-md-6">
            <label>Phone Number</label>
            <input type="phone" class="form-control" placeholder="" name="phoneNo" required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Location</label>
            <input type="text" class="form-control" placeholder="e.g Lagos, Nigeria" name="location" required />
          </div>
          <div class="form-group col-md-6">
            <label>Availability</label>
            <select class="form-control" name="availability" required>
              <option value="not-available">Not Available</option>
              <option value="on-site">On-Site</option>
              <option value="remote">Remote</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Track</label>
            <select class="form-control" name="track" required>
              <option value="">Select Track</option>
              <option value="frontend">Frontend</option>
              <option value="backend">Backend</option>
              <option value="design">Design</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label>CV</label>
            <input type="url" class="form-control" placeholder="Link to your CV (URL)" name="employeeCv" required />
          </div>
        </div>
        <div class="d-flex justify-content-center justify-content-md-end mt-3">
          <button type="submit" class="btn btn-primary btn-lg">Create</button>
        </div>
      </form>
    </div>
  </main>

